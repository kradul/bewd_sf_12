<% @movies.each do |movie| %>
  <section>
    <header>
      (<b><%= movie.year_released %></b>)
      <%= link_to movie.title, movie %>
    </header>
    <% if movie.genre %>
   		 <%= link_to movie.genre.title, movie.genre %>
   	<% end %>
    <%= movie.description %>
    <br>
    <% if user_signed_in? %>
      <% if current_user.movies.include? movie %>
        <%= link_to "Remove from Watch List", remove_movie_path(movie.id)%>
      <% else %>
        <%= link_to "Add to Watch List", add_movie_path(movie.id)%>
      <% end %>
    <% end %>
  </section>
  <br/>
<% end %>
